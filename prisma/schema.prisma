// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email     String
  firstName String
  lastName  String
  password  String
  habits    Habit[]
  missions   Mission[]
}

model Habit {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name    String
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  description String?
  due         DateTime?
  deleted     Boolean   @default(false)
  missions    Mission[]

  @@unique([ownerId, name])
  @@index([ownerId, id])
}

enum MISSION_STATUS {
  UNCOMPLETED
  WAITING
  ACCOMPLISHED
}

model Mission {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status MISSION_STATUS @default(WAITING)
  name   String

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])
  habitId String
  habit   Habit  @relation(fields: [habitId], references: [id])

  deleted Boolean @default(false)

  @@index([ownerId])
}
